{
    "compilerOptions": {
        "target": "es6",
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "incremental": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["dist","node_modules"],
    "compileOnSave": true,
}